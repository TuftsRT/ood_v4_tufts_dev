---
batch_connect:
  template: "basic"
  set_host: "host=$(hostname -A | awk '{print $1}')"
  conn_params:
    - csrf_token
    
script:
  native:
    - "--time=<%= bc_num_hours %>:00:00"
    - "--mem=<%= num_memory %>G"
    - "--nodes=1"
    - "--ntasks=<%= num_cores %>"
    - "--partition=<%= partition %>"