# Job submission configuration file
#
---

batch_connect:
  template: basic

script:
  native:
    - "--time"
    - "<%= bc_num_hours %>:0:0"
    - "-n"
    - "<%= num_cores %>"
    - "--mem"
    - "<%= num_memory %>"
    - "--nodes"
    - "1"
    <%- if num_cores.to_i >=6||num_memory.to_i >= 32 -%>
    - "-p"
    - "<%= partition %>"
    <%- else -%>
    - "--reservation"
    - "<%= reservation %>"
    <%- end -%>
