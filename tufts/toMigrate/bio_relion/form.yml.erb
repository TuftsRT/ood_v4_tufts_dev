---
cluster: "pax"
attributes:
  modules: "relion"

attributes:
  bc_vnc_resolution:
    required: true

  num_cores:
    widget: "select"
    label: "Number of cores"
    options:
      - ["1", "1"]
      - ["2", "2"]
      - ["4", "4"]
      - ["8", "8"]
      - ["12", "12"]
      - ["16", "16"]
      - ["24", "24"]
      - ["36", "36"]
      - ["48", "48"]
      - ["64", "64"]

  num_memory:
    widget: "select"
    label: "Amount of memory"
    options:
      - ["8GB", "8000"]
      - ["16GB", "16000"]
      - ["32GB", "32000"]
      - ["64GB", "64000"]
      - ["96GB", "96000"]       
      - ["128GB", "128000"]

  gpu_partition:
    widget: "select"
    label: "Select preempt or normal gpu partition"
    help: "NOTE: jobs submitted to the preempt partition may get automatically killed to allow higher priority jobs to run"
    options:
      - ["preempt"]
      - ["gpu"]
      - ["heldweinlab"]
    value: "preempt"

  gpu_type:
    widget: "select"
    label: "Select the GPU type"
    help: "gpu partition only has a100 and p100, preempt partition has all listed gpu types."
    options:
      - ["a100"]
      - ["p100"]
      - ["v100"]
      - ["rtx_a6000"]
      - ["rtx_6000ada"]
    value: "a100"

<%= File.read("/etc/ood/config/apps/dashboard/batch_connect/partials/reservation.yml").indent(2) %>

  version:
    label: Software Version
    widget: select
    options:
           - ["5.0"]
           - ["4.0.1"]
  tomo:
    label: tomo
    widget: check_box
    checked_value: 1
    unchecked_value: 0
    help: |
           Subtomogram analysis
  workdir:
    label: "Project Directory"
    data-filepicker: true
    data-target-file-type: dirs  # Valid values are: files, dirs, or both
    readonly: false
    help: "Select your project directory; defaults to $HOME"

form:
  - bc_vnc_resolution
  - bc_num_hours
  - num_cores
  - num_memory
  - gpu_partition
  - gpu_type 
  - version
  - workdir
  - tomo
