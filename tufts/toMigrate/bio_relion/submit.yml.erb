# Job submission configuration file
#
---
batch_connect:
  template: "vnc"
  conn_params:
    - working_path  
script:
  email_on_started: true
  email_on_terminated: true
  email: <%= ENV["USER"] %>@tufts.edu
  job_name: "OnDemand/RELION"
  native:
    - "--time"
    - "<%= bc_num_hours %>:0:0"
    - "-n"
    - "<%= num_cores %>"
    - "--mem"
    - "<%= num_memory %>"
    - "--nodes"
    - "1"
    -  "-p" 
    -  "<%= gpu_partition %>"
    - "--gres=gpu:<%= gpu_type %>:1"
