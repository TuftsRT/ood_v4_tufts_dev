---
cluster: "pax"
form:
  - bc_num_hours
  - num_cores
  - num_memory
  - reservation
  - bc_vnc_resolution
  - version

attributes:
  bc_vnc_resolution:
    required: true
<%= File.read("/etc/ood/config/apps/dashboard/batch_connect/partials/medium/num_cores.yml").indent(2) %>
<%= File.read("/etc/ood/config/apps/dashboard/batch_connect/partials/medium/num_memory.yml").indent(2) %>
<%= File.read("/etc/ood/config/apps/dashboard/batch_connect/partials/reservation.yml").indent(2) %>
  version:
    widget: select
    label: "ABAQUS version"
    help: "This defines the version of ABAQUS you want to load."
    options:
      - [ "Abaqus 2016", "abaqus/2016" ]
      - [ "Abaqus 2021", "abaqus/2021" ]
