# Job submission configuration file
#
---

batch_connect:
  template: "basic"
  

#
# sgd - 09/20/2018
#
script:
  native:
    - "--time"
    - "<%= bc_num_hours %>:0:0"
    - "-n"
    - "<%= num_cores %>"
    - "--mem"
    - "<%= num_memory %>"
    - "--nodes"
    - "1"
    - "-p"
    - "patralab"
    <%- if gpu_partition == "gpujob" -%>
        <%- if gpu_type == "nogpu" -%>
    - ""
        <%- else -%>
    - "--gres=gpu:<%= gpu_type %>:1"
        <%- end -%>
    <%- end -%>
