---
cluster: "pax"
form:
  - bc_num_hours
  - num_cores
  - num_memory
  - bc_vnc_resolution
  - num_generic_gpus
attributes:
  bc_vnc_resolution:
    required: true
<%= File.read("/etc/ood/config/apps/dashboard/batch_connect/partials/num_generic_gpus.yml").indent(2) %>
  num_memory:
    widget: "select"
    label: "Amount of memory"
    help: "Enter memory amount in GB, i.e. `500` for 500GB or `1000` for 1TB"
    required: true
    widget: "number_field"
    pattern: "[0-9]{1,2,3}"
    id: 'num_memory'
    value: 4
    min: 1
    max: 1400

  num_cores:
    widget: "select"
    label: "Number of CPU cores"
    help: "Enter a number between 1 and 128"
    required: true
    widget: "number_field"
    pattern: "[0-9]{1,2,3}"
    id: 'num_cores'
    value: 1
    min: 1
    max: 128

