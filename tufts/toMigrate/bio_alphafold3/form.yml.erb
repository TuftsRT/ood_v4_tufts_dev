---
cluster: "pax"
attributes:
  modules: "alphafold3"

attributes:
  bc_vnc_resolution:
    required: true

  num_cores:
    widget: "select"
    label: "Number of cores"
    options:
      - ["1", "1"]
      - ["2", "2"]
      - ["4", "4"]
      - ["8", "8"]
      - ["12", "16"]
      - ["16", "16"]

  num_memory:
    widget: "select"
    label: "Amount of memory"
    options:
      - ["16GB", "16000"]
      - ["32GB", "32000"]
      - ["64GB", "64000"]
      - ["96GB", "96000"]       

  gpu_partition:
    widget: "select"
    label: "Select preempt or normal gpu partition"
    help: "NOTE: jobs submitted to the preempt partition may get automatically killed to allow higher priority jobs to run"
    options:
      - ["preempt"]
      - ["gpu"]
    value: "preempt"

  gpu_type:
    widget: "select"
    label: "Select the GPU type"
    help: "gpu partition has a100, a100-80GB and p100, preempt partition has all listed gpu types."
    options:
      - ["a100"]
      - ["a100-80GB"]
      - ["l40"]
      - ["rtx_a5000"] 
      - ["rtx_a6000"]
      - ["rtx_6000ada"]
    value: "a100"

<%= File.read("/etc/ood/config/apps/dashboard/batch_connect/partials/reservation.yml").indent(2) %>

  version:
    label: Software Version
    widget: select
    options:
           - ["3.0.1"]

  json_path:
    widget: text_field
    required: false
    label: json_path
    help: |
        Path to the input JSON file.

  input_dir:
    widget: text_field
    required: false
    label: input_dir
    help: | 
        Path to the directory containing input JSON files.

  model_dir:
    widget: text_field
    required: true
    label: model_dir
    help: | 
           <p>Users needs to obtain their own copy of the trained model parameters by completing  
           <a href="https://docs.google.com/forms/d/e/1FAIpQLSfWZAgo1aYk0O4MuAXZj8xRQ8DafeFJnldNOnh_13qAx2ceZw/viewform" target="_blank">this form </a>.</p>

  work_dir:
    label: "Working Directory"
    data-filepicker: true
    data-target-file-type: dirs  # Valid values are: files, dirs, or both
    readonly: false
    help: "Select your project directory; defaults to $HOME"
                  
  output_dir:
    widget: "text_field"
    required: true
    label: "Output directory Name"
    help: "Where the results will be going to (relative to the working directory field above). Example: alphafold.out" 

  run_data_pipeline:
    label: run_data_pipeline
    widget: check_box
    value: 1
    unchecked_value: 0
    help: |
        Whether to run the data pipeline, i.e. genetic and template search. 
        This part is CPU-only, time consuming and could be run on a machine without a GPU.

  run_inference:
    label: run_inference
    widget: check_box
    value: 1
    unchecked_value: 0
    help: |
        Whether to run the inference. This part requires a GPU.

  max_template_date:
    label: max_template_date
    widget: text_field
    value: "2021-09-30"
    help: |
         Maximum template release date to consider. Format: YYYY-MM-DD. All templates released after this date will be ignored.

  num_diffusion_samples:
    label: num_diffusion_samples
    widget: text_field
    value: "5"
    help: |
           Number of diffusion samples to generate.

  num_recycles:
    label: num_recycles
    widget: text_field
    value: "10"
    help: |
          Number of recycles to use during inference.

  num_seeds:
    label: num_seeds
    widget: text_field
    help: |
           Number of seeds to use for inference. If set, only a single seed must be provided in the input JSON. AlphaFold 3 will then generate random seeds in sequence, starting from the single seed specified in the input JSON. The full input JSON produced by AlphaFold 3 will include the generated random seeds. If not set, AlphaFold 3 will use the seeds as provided in the input JSON.

  conformer_max_iterations:
    label: conformer_max_iterations
    widget: text_field
    help: |
          Optional override for maximum number of iterations to run for RDKit conformer search.

  extra_parameters:
    widget: text_field
    required: false
    label: Extra parameters
    help: |
           Extra parameters to use. Multiple space-separated parameters can be used.

form:
  - bc_num_hours
  - num_cores
  - num_memory
  - gpu_partition
  - gpu_type 
  - version
  - work_dir
  - json_path
  - input_dir
  - output_dir
  - model_dir
  - run_data_pipeline
  - run_inference
  - max_template_date
  - num_diffusion_samples
  - num_recycles
  - num_seeds
  - conformer_max_iterations
  - extra_parameters
