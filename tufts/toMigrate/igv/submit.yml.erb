# Job submission configuration file
#
---

batch_connect:
  template: "vnc"

#
# sgd - 11/02/2018
#
script:
  native:
    - "--time"
    - "<%= bc_num_hours %>:0:0"
    - "-n"
    - "<%= num_cores %>"
    - "--mem"
    - "<%= num_memory %>"
    - "--nodes"
    - "1"
    <%- if reservation != 'default' -%>
    - "--reservation"
    - "<%= reservation %>"
    <%- end -%>
